{% extends 'base.html.twig' %}
{% block title%} {% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}

    <div class="container">
        <div class="row gy-3">
            <h2>{{ category.name }}</h2>
            {% for pizza in pizzas %}
                <div class="col-12 col-md-4">
                    <div class="card" style="width: 20rem;">
                        <img class="card-img-top" src="..." alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{ pizza.name }}</h5>
                            <p class="card-text">Hier zijn alle {{ pizza.name }} pizza's</p>
                            <a href="#" class="btn btn-primary">Bekijk de pizza</a>
                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>


{% endblock %}