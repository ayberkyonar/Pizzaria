{% extends 'base.html.twig' %}
{% block title%} {% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}

<div class="container">
    <div class="row gy-3">

        {% for category in categories %}
        <div class="col-12 col-md-4">
            <div class="card" style="width: 20rem;">
                <img class="card-img-top" src="..." alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ category }}</h5>
                    <p class="card-text">Hier zijn alle {{ category }} pizza's</p>
                    <a href="/products/{{ category }}" class="btn btn-primary">Bekijk de pizza's</a>
                </div>
            </div>
        </div>

{% endfor %}
    </div>
</div>


{% endblock %}